# Example environment configuration for rhdh-cli
# Copy this file to local.env and modify as needed
# These variables will automatically update the rhdh-secrets.yaml file when deploying presets

# GitHub OAuth Configuration
AUTH_GITHUB_CLIENT_ID=your_github_client_id
AUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_HOST_DOMAIN=github.com
GITHUB_ORGANIZATION=your_organization

# GitHub App Configuration  
GITHUB_APP_ID=your_github_app_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_WEBHOOK_SECRET=your_webhook_secret

# GitHub Private Key (replace with your actual private key)
GITHUB_PRIVATE_KEY_FILE=""

# Ollama/AI Configuration
OLLAMA_URL=https://your-ollama-instance.com/v1
OLLAMA_TOKEN=your_ollama_token 